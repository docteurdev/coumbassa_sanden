<script >
import CheckItem from "../../../components/register/CheckItem.vue";
import FileItem from "../../../components/register/FileItem.vue";
import Recu from "../../components/Recu.vue"
import axios from "axios";
import { useRoute } from 'vue-router';
import { useQuasar } from 'quasar';


export default {
 components: {
   CheckItem,
   FileItem,
   Recu,
 },
 data() {
   return {
     $q : useQuasar(),
     q2:{
      value: '',
      text: ''
     },
     q3:{
      value: '',
      text: ''
     },
     order:{
      value: '',
      text: ''
     },
     yes: true,
     no: false,
     file: "",
     q4: false,

     isStarting: false,
     isForStarting: false,

     reqTrueTwo: null,
     reqTrueThree: null,
     isShowContract: null,
     reqTrueFour: null,
     reqTrueFive: null,
     reqTrueSix: null,
     reqTrueSeven: null,
     reqTrueEight: null,
     reqTrueNine: null,
     reqTrueTen: null,
     reqTrueeEleven: null,
     duree: 0,
     contratNom: "",
     loyeran: "",
     dateSignature: "",
     entree: "",
     loyeran: "",
     submited: false,
     dynaNumOne: 0,
     dynaNumTwo: " ",

     twoState: null,
     // ==============
     order3: "03",
     order4: "03",
     order5: "05",
     order6: "06",
     order7: "07",
     order8: "08",
     order9: "09",
     order10: "10",
     order11: "04",

     // &&&&&&&&&&&&&&&&&&&&
     twoYesThreeYes: false,
     twoYesThreeNo: false,

     twoNoThreeYes: false,
     twoNoThreeNo: false,

   };
 },
 mounted(){
  const route = useRoute();
  const info = route.query;
  this.contratNom = info.contrat_nom,
  this.q2 = info.q2
  this.q3 = info.q3
  this.order = info.order
  console.log("llllllllllllllllllll",info.q2, info.q2, info.order);


 }
 ,
 methods: {
  goBack() {
  this.$router.go(-1);
  // Alternatively, you can use this.$router.back();
  },
   handleFile(file){
     this.file = file;
      console.log(file);
   },
   question1(res) {

     switch (res.num) {
       case "02":
         this.isStarting = true;
         this.reqTrueTwo = res.value;
         if(res.value){
          this.order4 = "03";

          // WHEN CLICKING  02 YES THEN 03 YES  THEN 02 NO WITH 2 INITAL VALUE = YES
          if(this.isForStarting){
            // this.twoNoThreeYes = false;
            this.twoYesThreeYes = false;
            console.log("this is me!");
          //  this.twoNoThreeNo = false;
           this.order11 = "04";

            // this.order5 = "04";
            this.order6 = "05";
            this.order7 = "06";
            this.order8 = "07";
            this.order9 = "08";
            this.order10 = "09";
          }

          if(!this.reqTrueFour){
            this.order5 = "04";
            this.order6 = "05";
            this.order7 = "06";
            this.order8 = "07";
            this.order9 = "08";
            this.order10 = "09";
          }
         }
         if(!res.value){
          this.twoNoThreeYes = true;

            this.order4 = "04"
            this.order5 = "05";
            this.order6 = "06";
            this.order7 = "07";
            this.order8 = "08";
            this.order9 = "09";
            this.order10 = "10";
           
          // WHEN CLICKING  02 YES THEN 03 YES  THEN 02 NO WITH 2 INITAL VALUE = NO

          if(this.isForStarting){
            this.twoYesThreeNo = false;
            // this.twoNoThreeYes = true;

           this.order11 = "05";

           // this.order5 = "06";
           this.order6 = "06";
           this.order7 = "07";
           this.order8 = "08";
           this.order9 = "09";
           this.order10 = "10";
          }
         }
         break;

       case "03":
        
         break;

       case "04":
        this.isForStarting = true;
        this.reqTrueFour = res.value;

       // if anwser 2 yes and anwser 4 yes
       if(res.value && this.reqTrueTwo  ){
         this.twoYesThreeYes = true;
         this.twoYesThreeNo = false;
         this.twoNoThreeNo = false;

         this.order6 = "05";
         this.order7 = "06";
         this.order8 = "07";
         this.order9 = "08";
         this.order10 = "09";
       }
      
        // if anwser 2 yes and anwser 4 no
        if(!res.value && this.reqTrueTwo){
         this.twoYesThreeYes = false;
         this.twoNoThreeYes = false;
         this.twoYesThreeNo = true;
         this.order5 = "04";
         // this.order6 = "05";
         // this.order7 = "06";
         // this.order8 = "07";
         // this.order9 = "08";
         // this.order10 = "09";
        }
       // IF answer 2 no and answer 4 yes
       if( res.value && !this.reqTrueTwo ){
         this.twoNoThreeYes = true;
         this.twoNoThreeNo = false;
         this.twoYesThreeNo = false;
         
         console.log("========àààààààààààààà");

         this.order11 = "05";

         // this.order5 = "06";
         this.order6 = "06";
         this.order7 = "07";
         this.order8 = "08";
         this.order9 = "09";
         this.order10 = "10";


       }
        // IF answer 2 no and answer 4 no
        if( !res.value && !this.reqTrueTwo ){
         this.twoNoThreeYes = false;
         this.twoYesThreeYes = false;
         this.twoNoThreeNo = true;
          // console.log("===============nchhchhhhhh");
         this.order5 = "05";
         this.order6 = "06";
         this.order7 = "07";
         this.order8 = "08";
         this.order9 = "09";
         this.order10 = "10";

       }
       if(res.value && this.reqTrueTwo && this.isStarting ){
        console.log("===============nchhchhhhhh");

         this.twoNoThreeYes = false;
       }
    
         break;
       case "05":
         this.reqTrueFive = res.value;

         break;
       case "06":
         this.reqTrueSix = res.value;
         break;

       case "07":
         this.reqTrueSeven = res.value;
         break;
       case "08":
         this.reqTrueEight = res.value;
         break;
       case "10":
         this.reqTrueTen = res.value;
         break;
       case "11":
       this.reqTrueeEleven = res.value;

         break;
     }
   },
   regesterForfait() {
     const data = {
       data: {
         contratnom: "",
         contratimpot: this.reqTrueTwo,
         immobilier:  this.reqTrueThree,
         mobilier: this.reqTrueFour,
         simulation: this.reqTrueFive,
         duree: this.duree,
         entree: this.entree,
         signature: this.dateSignature,
         loyeran: this.loyeran,
         loyermois: 0,
         paye: this.reqTrueTen,
         calculdroit: this.reqTrueeEleven


       },
     };

     axios
       .post("https://api.coumbassa-sanden.com/api/taxtechregisters", data)
       .then((res) => {
         console.log(res.data);
         if(res.data){
           this.submited = true
         }
       })
       .catch((error) => {
         console.log(error);
       });
   },
   toasted(icon, mgs, color, action){
     this.$q.notify({
         color:  color? color : null,
         message: mgs,
         position: "top",
         icon:icon? "report_problem" : "",
         multiLine: true,
         actions: action && [
          {label: "Forfait 1", color:"orange", round: true, handler: () => navigateTo("/register/forfait1")},
          {icon: "close", color:"white", handler: () => null},
         ]
       })
   }
 },
};
</script>
